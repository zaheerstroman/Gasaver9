<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/outline_border_curve_toolbar"
            android:orientation="horizontal"
            android:paddingBottom="10sp">



            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="05dp"
                android:paddingRight="40dp">


                <TextView
                    android:id="@+id/tv_StationCode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="05dp"
                    android:paddingTop="05dp"
                    android:text="# Name (US-7856)"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"

                    android:gravity="left"
                    android:orientation="horizontal"
                    android:paddingLeft="00dp"

                    android:paddingTop="05dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:id="@+id/iv_wishlist"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:paddingLeft="05dp"
                        android:src="@drawable/ic_location"

                        app:tint="@color/primaryColor" />

                    <!--                tv_save-->
                    <TextView
                        android:id="@+id/tv_location1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="05dp"
                        android:paddingRight="00dp"
                        android:paddingBottom="05dp"
                        android:text="Sydney"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </LinearLayout>



                <TextView
                    android:id="@+id/tv_status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="05dp"
                    android:background="@drawable/outline_border_yellow"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="APPROVED"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold"


                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="05dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/iv_wishlist_calender"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:paddingRight="05dp"
                        android:src="@drawable/calendar_sky_blue_icon" />

                    <TextView
                        android:id="@+id/tv_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="00dp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="2023-02-28 18:23 "
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="13dp"

                        android:textStyle="bold" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"

                    android:paddingBottom="03dp">

                    <TextView
                        android:id="@+id/tv_amnt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingTop="05dp"
                        android:paddingRight="50dp"
                        android:text="  "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />

                </LinearLayout>





                <LinearLayout
                    android:id="@+id/ll_contact1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@drawable/outline_border_yellow"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_15sdp"

                    android:paddingBottom="@dimen/_5sdp"

                    >

                    <ImageView
                        android:id="@+id/iv_rewards_icon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="01dp"
                        android:paddingRight="00dp"
                        android:src="@drawable/rewards"
                        app:tint="@color/primaryColor" />


                    <TextView
                        android:id="@+id/tv_call_builder_Rewards"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Rewards"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_call_builder_Rewards_Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textColor="@color/red"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>