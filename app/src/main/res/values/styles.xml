<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PowerSpinnerStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/powerspinner_scrollbar</item>
    </style>

    <style name="NavStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dip</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_4sdp</item>
    </style>


    <style name="circleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">40%</item>
    </style>

    <style name="AppTheme_Loading_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>

    </style>



    <style name="AppThemePurple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/Purple</item>
    </style>

    <style name="AppThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/orange</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/orangelight</item>
    </style>

    <style name="AppThemeFullWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/whiteblue</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/orangelight</item>
    </style>

    <style name="ButtonOrange">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <!--        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>-->
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="ButtonGrey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="ButtonRoundedOrange">
        <item name="android:maxHeight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_rounded_orange</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="ButtonNoBg">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator" tools:targetApi="LOLLIPOP">@null</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
    </style>

    <style name="EditText">
        <item name="android:minHeight">45dp</item>

<!--        EditText Cream Color Autofild Came Cream Color-->
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/space10</item>
        <item name="android:paddingRight">@dimen/space10</item>
        <item name="android:paddingTop">@dimen/space10</item>
        <item name="android:paddingBottom">@dimen/space10</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TextView14spBlackPad">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/space15</item>
        <item name="android:paddingBottom">@dimen/space15</item>
    </style>

    <style name="TextView14spGrayPad">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/textGray</item>
        <item name="android:paddingTop">@dimen/space15</item>
        <item name="android:paddingBottom">@dimen/space15</item>
    </style>

    <style name="AppThemeFull.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeFull.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>

    <style name="loadingDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparentColor</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="background">@color/transparentColor</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">


        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Widget.Theme.GasServiceApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="chip_Style" parent="Base.Widget.MaterialComponents.Chip">
        <item name="android:checkable">true</item>

        <item name="chipIconVisible">false</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>

        <item name="checkedIcon">@drawable/ic_mtrl_chip_checked_black</item>

        <item name="android:textColor">@color/chip_textclr</item>

        <item name="chipBackgroundColor">@color/chip_bg</item>
        <item name="rippleColor">@color/mtrl_choice_chip_ripple_color</item>

    </style>


</resources>
