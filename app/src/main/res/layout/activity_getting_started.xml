<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.GettingStarted">

    <!--    android:background="@drawable/register_background_imge">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/getting_started_back_arch_2"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/gasaver_logo_Image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="10dp"
            android:hint=""
            android:inputType="phone"
            android:textSize="16sp"
            android:src="@drawable/gasaver_arch_logo"
            />


        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="00dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:text="Welcome"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:textStyle="bold"


            >

        </TextView>


        <TextView
            android:id="@+id/ca_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="Create an account find compatible"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ca_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="00dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="fuel prices"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <!--            android:background="@drawable/edittext_background"-->
        <ImageView
            android:id="@+id/fuil_Image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:hint="mobileNo"
            android:inputType="phone"
            android:padding="15dp"
            android:textSize="16sp"
            android:src="@drawable/gasaver_arch_pump"
            />

        <Button
            android:id="@+id/getting_Started_Button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/light_blue"
            android:gravity="center"
            android:paddingStart="25dp"
            android:text="Getting Started"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <!--                android:padding="15dp"-->
        <!--                <TextView-->
        <!--                    android:id="@+id/login_1"-->
        <!--                    android:layout_width="match_parent"-->
        <!--                    android:layout_height="wrap_content"-->
        <!--                    android:layout_marginLeft="40dp"-->
        <!--                    android:layout_marginTop="20dp"-->
        <!--                    android:layout_marginRight="40dp"-->
        <!--                    android:background="@color/white"-->
        <!--                    android:gravity="center"-->
        <!--                    android:text="Already have a account? Log In"-->
        <!--                    android:textSize="16sp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/white"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvabtmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:text="Already have an account? "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <!--                    tvaboutourmission-->
            <TextView
                android:id="@+id/login_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/getting_Started_Button"
                android:background="@color/white"
                android:text="Log in"
                android:textColor="@color/Purple"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
