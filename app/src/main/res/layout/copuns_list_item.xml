<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="10sp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/outline_border_curve_toolbar"
            android:orientation="horizontal"
            android:paddingBottom="10sp"

            android:backgroundTint="@color/light_blue_900"
            >




            <LinearLayout
                android:id="@+id/stationLayout1"

                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="05dp"
                android:paddingTop="05dp"
                android:paddingRight="10dp"
                >


                <TextView
                    android:id="@+id/tv_StationCode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="05dp"
                    android:text="# Name (US-7856)"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:layout_gravity="center"
                    />


                <LinearLayout
                    android:id="@+id/stationLayout2"
                    android:layout_width="329dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"

                    android:paddingStart="05dp"
                    android:paddingTop="20dp"

                    >

                    <RelativeLayout
                        android:id="@+id/tv_StationCode3"

                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_weight="1.9"
                        android:gravity="center"

                        >

                        <!--  app:shapeAppearanceOverlay="@style/circleImageViewStyle"-->
                        <!--  <com.google.android.material.imageview.ShapeableImageView-->
                        <!--  android:scaleType="fitXY"-->

                        <ImageView
                            android:id="@+id/iv_profile_img1"
                            android:layout_width="@dimen/_300sdp"
                            android:layout_height="@dimen/_250sdp"

                            android:layout_centerInParent="true"
                            android:background="@drawable/outline_border_white"
                            android:paddingLeft="05dp"
                            android:paddingTop="10dp"
                            android:paddingRight="05dp"


                            android:paddingBottom="10dp"
                            android:src="@drawable/united_full_copy"
                            app:shapeAppearanceOverlay="@style/circleImageViewStyle" />
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>